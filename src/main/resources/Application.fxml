<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="ru.kpfu.itis.ibragimovaidar.controller.ApplicationController" prefHeight="500" prefWidth="500">
    <children>
        <HBox id="Hbox" alignment="CENTER" spacing="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10"
              AnchorPane.topAnchor="10">
            <children>
                <Label fx:id="mainLabel" text="Get weather by city name:"/>
                <TextField fx:id="city" prefWidth="0" HBox.hgrow="ALWAYS"/>
            </children>
            <children>
                <Button fx:id="search" prefWidth="0" HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>


        <VBox fx:id="weatherInfoVBox" AnchorPane.topAnchor="50" AnchorPane.rightAnchor="10" AnchorPane.leftAnchor="10">
            <children>
                <Label fx:id="cityName" text="Город: "/>
                <Label fx:id="temp" text="Температура: "/>
                <Label fx:id="tempFeelsLike" text="Ощущается как: "/>
                <Label fx:id="tempDescription" text="Погода: "/>
                <Label fx:id="windSpeed" text="Скорость ветра: "/>
                <Label fx:id="humidity" text="Влажнось: "/>
            </children>
        </VBox>
    </children>
</AnchorPane>